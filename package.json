{
	"name": "serene-pub",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"license": "AGPL-3.0",
	"bin": "build/index.js",
	"description": "Serene Pub is a modern, customizable chat application designed for immersive roleplay and creative conversations.",
	"author": {
		"name": "Jody Doolittle",
		"email": "jody@doolittle.me",
		"url": "https://github.com/doolijb"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/doolijb/serene-pub.git"
	},
	"homepage": "https://github.com/doolijb/serene-pub",
	"bugs": {
		"url": "https://github.com/doolijb/serene-pub/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && vite build --ssr",
		"start": "node build/index.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:generate": "drizzle-kit generate --config ./src/lib/server/db/drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config ./src/lib/server/db/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config ./src/lib/server/db/drizzle.config.ts",
		"build:licenses": "npx license-checker --yaml => THIRD_PARTY_LICENSES.txt",
		"bundle": "node scripts/bundle-dist.js",
		"dist": "bun run build && bun run build:licenses && bun run bundle"
	},
	"devDependencies": {
		"@enviro/metadata": "^1.5.1",
		"@fontsource/fira-mono": "^5.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@skeletonlabs/skeleton-svelte": "^1.2.3",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20",
		"@types/png-chunk-text": "^1.0.3",
		"@types/png-chunks-extract": "^1.0.2",
		"axios": "^1.9.0",
		"drizzle-kit": "^0.30.2",
		"env-paths": "^3.0.0",
		"js-yaml": "^4.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.0",
		"svelte-check": "^4.0.0",
		"sveltekit-sse": "^0.13.19",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@lenml/char-card-reader": "^1.0.6",
		"@lucide/svelte": "^0.511.0",
		"@proj-airi/duckdb-wasm": "^0.4.27",
		"@types/lodash": "^4.17.17",
		"@types/pngjs": "^6.0.5",
		"better-sqlite3": "^11.8.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.40.0",
		"file-type": "^21.0.0",
		"gpt-tokenizer": "^3.0.0",
		"handlebars": "^4.7.8",
		"llama-tokenizer-js": "^1.2.2",
		"llama3-tokenizer-js": "^1.2.0",
		"lodash": "^4.17.21",
		"marked": "^15.0.12",
		"mistral-tokenizer-js": "^1.0.0",
		"ollama": "^0.5.16",
		"pkg": "^5.8.1",
		"sveltekit-io": "^1.0.12",
		"uuid": "^11.1.0"
	}
}